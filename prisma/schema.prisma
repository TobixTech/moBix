// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. User Model (To store app-specific data linked to Clerk)
model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique // Link to Clerk's user ID
  email     String   @unique
  role      Role     @default(USER) // ADMIN or USER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User Roles
enum Role {
  USER
  ADMIN
}

// 2. Movie Model (For all movie data)
model Movie {
  id          String    @id @default(uuid())
  title       String
  description String
  year        Int
  genre       String
  posterUrl   String   // URL to the movie poster image
  videoUrl    String   // URL to the movie video/stream
  isTrending  Boolean   @default(false)
  isFeatured  Boolean   @default(false)
  likes       Like[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// 3. Admin Invite Code (For secure admin sign-up)
model AdminInvite {
  id        String    @id @default(uuid())
  code      String    @unique
  isValid   Boolean   @default(true) // Can be disabled after use
  expiresAt DateTime?
  createdAt DateTime  @default(now())
}

model Like {
  id        String   @id @default(uuid())
  userId    String   // Clerk user ID
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, movieId])
}

model Comment {
  id        String   @id @default(uuid())
  userId    String   // Clerk user ID
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  text      String
  rating    Int      @default(5) // 1-5 star rating
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdSettings {
  id              String   @id @default(uuid())
  horizontalCode  String?  // 728x90 ad code
  verticalCode    String?  // 300x250 ad code
  placements      String[] @default([]) // Array of placement names
  updatedAt       DateTime @updatedAt
}
